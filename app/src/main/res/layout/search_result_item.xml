<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WrapContentLayout"
    android:layout_margin="@dimen/spacing_m">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/WrapContentLayout"
        android:padding="@dimen/spacing_s">

        <ImageView
            android:id="@+id/views"
            style="@style/WrapContentLayout"
            android:src="@drawable/ic_views"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewsLabel"
            style="@style/WrapContentLayout"
            android:text="@string/no_views_available"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/searchImage"
            android:layout_width="@dimen/grid_image_width"
            android:layout_height="@dimen/grid_image_height"
            android:layout_marginTop="@dimen/spacing_s"
            android:layout_marginBottom="@dimen/spacing_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/views"
            tools:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/imageTitle"
            style="@style/MatchConstraintWidthLayout"
            android:layout_marginBottom="@dimen/spacing_s"
            android:gravity="center"
            android:textSize="@dimen/text_m"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchImage"
            tools:text="Image Tiltle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>